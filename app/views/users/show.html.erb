<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
	<%= gravatar_for @user %>
	<%= @user.name %>

	<div id="actions">
	  <%= link_to "Create Instances", new_instance_path, class: "btn btn-large btn-primary" %>
	  <br><br>
          <%= link_to "Destroy Instance", instances_path, class: "btn btn-large btn-primary" %>
	</div>
	</section>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.instances.any?  %>
      <h3>Instances (<%= @user.instances.count %>)</h3>
      <ol class="instances">
	<%= render @instances %>
      </ol>
    <% end %>
    </div>
</div>
