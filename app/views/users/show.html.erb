<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
	<%= gravatar_for @user %>
	<%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.instances.any?  %>
      <h3>Instances (<%= @user.instances.count %>)</h3>
      <ol class="instances">
	<%= render @instances %>
      </ol>
    <% end %>
    </div>
</div>
