<head><meta http-equiv="refresh" content="10"></head>
<li>
  <span class="name"> <%= instance.name %> </span>
  <span class="info"> 
    ID: <%= instance.instanceID %>
      <%= link_to "start", start_instances_path(instance)  %> 
  </span>
  <br>
  <span class="info">
    IP: <%= instance.ip %> 
      <%= link_to "stop", stop_instances_path(instance) %> 
  </span>
  <br>
  <span class="info"> 
    Type: <%= instance.instanceType %> 
        <%= link_to "delete", instance , method: :delete, confirm: "You sure?" %> 
  </span>
  <br>
  <span class="info"> 
    Image: <%= instance.image %></span>
  <br>

  <% status = getStat(instance.instanceID) %>
  <% if status == 1 %>
    <span class="info"> Status:   <%= image_tag("green.png", alt: "TTGT" ) %></span>
  <% elsif status == 2 %>
    <span class="info"> Status: WAIT FOR GREEN (refresh page)   <%= image_tag("yellow.png", alt: "TTGT" ) %></span>
  <% else status == 3 %>
      <span class="info"> Status:   <%= image_tag("red.png", alt: "TTGT" ) %></span>
  <% end %>
</li>
